/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "nrf52480_dongle";
	compatible = "nrf52840_dongle";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct";

		label = "KSCAN";

		input-gpios
			= <&gpio0 10 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0  9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio1  0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 24 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 22 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 20 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 17 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>

			, <&gpio1 10 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio1 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio1 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0  2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 29 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpio0 31 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			;
	};

  default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <7>;
		rows = <2>;

		map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) 
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) 
		>;
	};

	leds {
		compatible = "gpio-leds";
		led0_green: led_0 {
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
			label = "Green LED 0";
		};
		led1_red: led_1 {
			gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
			label = "Red LED 1";
		};
		led1_green: led_2 {
			gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
			label = "Green LED 1";
		};
		led1_blue: led_3 {
			gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
			label = "Blue LED 1";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		red_pwm_led: pwm_led_0 {
			pwms = <&pwm0 8>;
		};
		green_pwm_led: pwm_led_1 {
			pwms = <&pwm0 41>;
		};
		blue_pwm_led: pwm_led_2 {
			pwms = <&pwm0 12>;
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio1 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
	};

	aliases {
		sw0 = &button0;
		led0 = &led0_green;
		led1 = &led1_red;
		led2 = &led1_green;
		led3 = &led1_blue;
		led0-green = &led0_green;
		led1-red   = &led1_red;
		led1-green = &led1_green;
		led1-blue  = &led1_blue;
		pwm-led0 = &red_pwm_led;
		pwm-led1 = &green_pwm_led;
		pwm-led2 = &blue_pwm_led;
		red-pwm-led = &red_pwm_led;
		green-pwm-led = &green_pwm_led;
		blue-pwm-led = &blue_pwm_led;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};

&pwm0 {
	status = "okay";
	ch0-pin = <8>;
	ch0-inverted;
	ch1-pin = <41>;
	ch1-inverted;
	ch2-pin = <12>;
	ch2-inverted;
};

/*
 * By default, not adding all available SPI instances (spi2, spi3) due to
 * limited GPIOs available on dongle board.
 */
&spi0 {
	compatible = "nordic,nrf-spi";
	/* Cannot be used together with i2c0. */
	/* status = "okay"; */
	sck-pin = <27>;
	mosi-pin = <26>;
	miso-pin = <42>;
};

&spi1 {
	compatible = "nordic,nrf-spi";
	status = "okay";
	sck-pin = <31>;
	mosi-pin = <30>;
	miso-pin = <45>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		sd_partition: partition@0 {
			label = "softdevice";
			reg = <0x00000000 0x00026000>;
		};
		code_partition: partition@26000 {
			label = "code_partition";
			reg = <0x00026000 0x000c6000>;
		};

		/*
		 * The flash starting at 0x000ec000 and ending at
		 * 0x000f3fff is reserved for use by the application.
		 */

		/*
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@ec000 {
			label = "storage";
			reg = <0x000ec000 0x00008000>;
		};

		boot_partition: partition@f4000 {
			label = "adafruit_boot";
			reg = <0x000f4000 0x0000c000>;
		};
	};
};
